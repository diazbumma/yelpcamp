<%- include('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <% if (currentUser) { %>
                <p><a class="btn btn-outline-primary" href="/campgrounds/new">Add new campgrounds</a></p>
            <% } %>
        </div>
    </header>

    <div class="row">
        <% campgrounds.forEach(item => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card mb-3">
                    <img class="card-img-top" src="<%= item.image %>">
                    <div class="card-body">
                        <p class="card-text"><%= item.name %></p>
                        <a class="btn btn-outline-info" href="/campgrounds/<%= item._id %>">More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include('../partials/footer') %>
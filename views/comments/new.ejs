<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="mx-auto my-5">
            <h1 class="mb-3">Post a New Comment</h1>
            <form action="/campgrounds/<%= campgroundId %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" placeholder="comment goes here"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Post</button>
                </div>

                <a href="/campgrounds/<%= campgroundId %>">Go Back</a>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
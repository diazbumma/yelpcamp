<%- include('../partials/header') %>

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto my-5">
            <h1 class="mb-3">Edit Comment</h1>
            <form action="/campgrounds/<%= campgroundId %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block">Update</button>
                </div>

                <a href="/campgrounds/<%= campgroundId %>">Go Back</a>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>